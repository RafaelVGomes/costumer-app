{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "src/types/*"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "controllers/*": [
        "./src/controllers/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "routes/*": [
        "./src/routes/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src/**/*"
, "src/controllers/ride-controller.ts", "src/database.ts", "src/types/ride/IRide.ts", "src/types/index.ts"  ],
  "exclude": [
    "node_modules"
  ]
}